{
  "compilerOptions": {
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitThis": false
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/lib/*",
    "**/es/*",
  ]
}